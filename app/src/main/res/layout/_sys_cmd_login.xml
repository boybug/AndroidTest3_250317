<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/colorPrimaryNavy">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/mainLayout"
            android:layout_alignParentTop="true"
            android:id="@+id/headerLayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:background="@color/colorPrimaryNavy">

                <ImageView
                android:layout_width="150dp"
                android:layout_height="130dp"
                android:background="@color/colorPrimaryNavy"
                android:src="@drawable/backgroud" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mainLayout"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true">

            <EditText
                android:id="@+id/txt_username"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bt_command_height"
                android:background="@color/colorWhite"
                android:ellipsize="end"
                android:ems="10"
                android:gravity="center|left"
                android:hint="อีเมล"
                android:inputType="textEmailAddress"
                android:lines="1"
                android:maxLines="1"
                android:paddingLeft="5dp"
                android:scrollHorizontally="true"
                android:textSize="20dp" />


            <EditText
                android:id="@+id/txt_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bt_command_height"
                android:background="@color/colorWhite"
                android:ellipsize="end"
                android:ems="10"
                android:gravity="center|left"
                android:hint="รหัสผ่าน [ไม่น้อยกว่า 6 หลัก]"
                android:inputType="textPassword"
                android:lines="1"
                android:maxLines="1"
                android:paddingLeft="5dp"
                android:layout_marginTop="10dp"
                android:scrollHorizontally="true"
                android:textSize="20dp" />

            <CheckBox
                android:id="@+id/chk_box"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bt_command_height"
                android:layout_marginTop="10dp"
                android:gravity="center|left"
                android:hint="บันทึกอีเมล/รหัสผ่าน ?"
                android:paddingLeft="5dp"
                android:scrollHorizontally="true"
                android:textSize="15dp" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/mainLayout"
            android:id="@+id/footerLayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:orientation="horizontal"
                        android:layout_alignParentTop="true">

                        <Button
                            android:id="@+id/bt_cmd_newaccount"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/bt_command_height"
                            android:layout_alignParentBottom="true"
                            android:layout_weight="1"
                            android:textColor="@color/colorWhite"
                            android:background="@color/colorFish"
                            android:gravity="bottom"
                            android:paddingBottom="10dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:layout_marginRight="2.5dp"
                            android:text="สร้างบัญชีใหม่"
                            android:textAlignment="center"
                            android:textSize="22dp" />

                        <Button
                            android:id="@+id/bt_cmd_login"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/bt_command_height"
                            android:layout_alignParentBottom="true"
                            android:layout_weight="1"
                            android:background="@color/colorFish"
                            android:elevation="24dp"
                            android:gravity="bottom"
                            android:paddingBottom="10dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:layout_marginLeft="2.5dp"
                            android:text="เข้าสู่ระบบ"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="22dp" />

                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>


