<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/content_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:focusable="true"
            android:focusableInTouchMode="true"></LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:stretchColumns="1">

            <TableRow android:id="@+id/tr_customer_new">
                <include
                    layout="@layout/customername"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_span="2" />

            </TableRow>

            <TableRow android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:layout_weight="0.03"
                    android:gravity="center|right"
                    android:paddingLeft="10dp"
                    android:text="เลขที่ : " />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="1">

                    <TextView
                        android:id="@+id/txt_order_no"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_column="1"
                        android:layout_weight="0.55"
                        android:gravity="center|left"
                        android:paddingLeft="10dp"/>

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:gravity="center|right"
                        android:paddingLeft="10dp"
                        android:text="น้ำหนักรวม : " />

                    <TextView
                        android:id="@+id/txt_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"

                        android:enabled="false"
                        android:gravity="center|right"
                        android:paddingLeft="3dp"
                        android:textSize="20dp"
                        android:text="0.0"/>

                </LinearLayout>
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_column="0"
                    android:layout_weight="0.03"
                    android:gravity="center|right"
                    android:paddingLeft="10dp"
                    android:text="จำนวน : " />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="1">

                    <TextView
                        android:id="@+id/txt_qty"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_weight="0.5"
                        android:enabled="false"
                        android:gravity="center|left"
                        android:paddingLeft="10dp"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:gravity="center|right"
                        android:paddingLeft="10dp"
                        android:text="ยอดขายรวม : " />

                    <TextView
                        android:id="@+id/txt_total"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"

                        android:enabled="false"
                        android:gravity="center|right"
                        android:paddingLeft="3dp"
                        android:textSize="20dp"
                        android:text="0.0"/>

                </LinearLayout>


            </TableRow>


            <TableRow
                android:id="@+id/tr_item_head"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_span="2"
                    android:orientation="horizontal">

                    <!--<Button-->
                    <!--android:id="@+id/bt_add_item_point"-->
                    <!--android:layout_width="60dp"-->
                    <!--android:layout_height="35dp"-->
                    <!--android:layout_gravity="center|right"-->
                    <!--android:background="@color/colorBeef"-->
                    <!--android:text="แถม"-->
                    <!--android:textColor="@color/colorWhite" />-->

                    <TextView
                        android:id="@+id/lab_orderitem_title"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingLeft="20dp"
                        android:text="รายการสินค้า"
                        android:textSize="22dp"
                        android:textStyle="bold" />

                </LinearLayout>

            </TableRow>

            <TableRow
                android:id="@+id/tr_item_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="10dp">

                <ListView
                    android:id="@+id/list_order_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="2"
                    android:background="@color/colorWhite"/>

            </TableRow>


        </TableLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
